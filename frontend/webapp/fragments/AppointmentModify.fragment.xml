<core:FragmentDefinition
		xmlns="sap.m"
		xmlns:l="sap.ui.layout"
		xmlns:f="sap.ui.layout.form"
		xmlns:core="sap.ui.core">
	<Dialog title="Title">
		<beginButton>
			<Button text="Speichern" type="Emphasized" press="handleDialogOkButton"/>
		</beginButton>
		<endButton>
			<Button text="SchlieÃŸen" press="handleDialogCancelButton"/>
		</endButton>
		<l:VerticalLayout
				class="sapUiContentPadding"
				width="100%">
			<f:SimpleForm
					id="appointmentCreateForm"
					editable="true"
					layout="ResponsiveGridLayout"
					singleContainerFullSize="false">
				<Label text="Titel" labelFor="appTitle"/>
				<Input id="appTitle" maxLength="255"/>
				<Label text="Beschreibung" labelFor="inputInfo"/>
				<Input id="moreInfo" maxLength="255"/>
				<Label text="Von" labelFor="startDate"/>
				<DateTimePicker
						id="DTPStartDate"
						required="true"
						visible="{= !${allDay>/allDay}}"
						change="handleDateTimePickerChange"
                        placeholder="01.01.1990, 08:00:00"/>
				<Label text="Bis" labelFor="endDate"/>
				<DateTimePicker
						id="DTPEndDate"
						required="true"
						visible="{= !${allDay>/allDay}}"
						change="handleDateTimePickerChange"
                        placeholder="01.01.1990, 08:00:00"/>
				<Label text="Terminart" labelFor="appType"/>
				<Select
						id="appType"
						items="{supportModel>/supportedAppointmentItems}">
					<core:Item key="{supportModel>type}" text="{supportModel>text}" />
				</Select>
			</f:SimpleForm>
		</l:VerticalLayout>
	</Dialog>
</core:FragmentDefinition>