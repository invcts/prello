<mvc:View
	controllerName="com.prello.controller.Overview"
	displayBlock="true"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
	xmlns:unified="sap.ui.unified">
    <Page showHeader="false">
        <content>
            <VBox class="sapUiSmallMargin" fitContainer="true">
                <OverflowToolbar height="100%" width="100%" class="sapUiTinyMarginBottom">
                    <Image src="/rsz_logo-prello.png" />
                    <ToolbarSpacer/>
                    <Button 
                        id="addNewAppointment" 
                        icon="sap-icon://add-activity" 
                        text="Termin anlegen" 
                        press="handleAppointmentCreate"
                        type="Transparent" 
                        tooltip="Neuen Termin erstellen" />
                    <Button
                        id="bLogout"
                        icon="sap-icon://log"
                        tooltip="Abmelden"
                        type="Transparent"
                        press="handleLogout" />
                </OverflowToolbar>
                <SinglePlanningCalendar
                    id="SPC1"
                    class="sapUiSmallMarginTop"
                    title="Meine Termine"
                    viewChange="handleViewChange"
                    appointmentSelect="handleAppointmentSelect"
                    headerDateSelect="handleHeaderDateSelect"
                    startDateChange="handleStartDateChange"
                    appointmentDrop="handleAppointmentDrop"
                    appointmentResize="handleAppointmentResize"
                    appointmentCreate="handleAppointmentCreateDnD"
                    moreLinkPress="handleMoreLinkPress"
                    stickyMode="All"
                    appointments="{path: '/appointments'}">
                    <actions>
                        <Button id="legendButton" icon="sap-icon://legend" text="Legende" press="handleOpenLegend" tooltip="Legende anzeigen" />
                    </actions>
                    <views>
                        <SinglePlanningCalendarMonthView key="MonthView" title="Monat" />
                        <SinglePlanningCalendarWeekView key="WeekView" title="Woche" />
                    </views>
                    <appointments>
                        <unified:CalendarAppointment
                            title= "{title}"
                            text= "{text}"
                            type= "{type}"
                            icon= "{icon}"
                            startDate= "{startDate}"
                            endDate= "{endDate}">
                        </unified:CalendarAppointment>
                    </appointments>
                </SinglePlanningCalendar>
            </VBox>
        </content>
    </Page>
</mvc:View>